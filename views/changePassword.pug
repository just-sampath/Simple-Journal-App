extends base

block content
  .container-fluid
    h2 Change Password
    form(action='/changePassword' method='POST')
      .form-group
        label(for='newPassword') Enter Old Password:
        input#newPassword(type='password' name='password' placeholder='Enter your new password' required='')
      .form-group
        label(for='newPassword') Enter New Password:
        input#newPassword(type='password' name='newPassword' placeholder='Enter your new password' required='')
      .form-group
        label(for='confirmNewPassword') Confirm New Password:
        input#confirmPassword(type='password' name='confirmPassword' placeholder='Confirm your new password' required='')
      .form-group
        button(type='submit') Submit
