    .edit-profile-container {
    max-width: 400px;
    margin: 0 auto;
    margin-top: 50px;
    padding: 20px;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .edit-profile-container h2 {
    text-align: center;
    margin-bottom: 20px;
    }
    .edit-profile-buttons {
    display: flex;
    justify-content: space-between;
    }
    .edit-profile-buttons button {
    width: 48%;
    padding: 10px;
    background-color: #4CAF50;
    color: #fff;
    border: none;
    border-radius: 3px;
    font-size: 16px;
    cursor: pointer;
    }
    .edit-profile-buttons button:hover {
    background-color: #2E8B57;
    }
.profile-container
  h1.profile-name #{name}
  .profile-details
    p#email(name='email') #{email}
  form
    .edit-profile-buttons
      button(type=' submit' formaction='/update') Update Details
      button(type=' submit' formaction='/changePassword') Update Password
      button#conf(type=' button') Delete Account
script.
  var ele = document.getElementById("conf");
  ele.addEventListener('click', () => {
  var r = confirm("Are you sure you want to delete your account?");
  if (r) {
  window.location.href = "/delete";
  }
  });